<% if current_admin? %>
  <h2>All Orders</h2>
<% else %>
  <h2>My Orders</h2>
<% end %>

<div class='orders'>
<% @orders.each do |order| %>
  <div class="each_item" id="order<%= order.id%>">
    <br><br><%= link_to order.id, order_path(order) %>
    <br>Created at: <%= order.created_at %>
    <br>Last updated: <%= order.updated_at %>
    <br>Current Status: <%= order.status %>
    <br>Number of Items: <%= order.item_count %>
    <br>Grand Total: <%= number_to_currency(order.grand_total) %>
    <% if order.status == "pending" %>
      <%= link_to "Cancel Order", order_path(order), method: :delete, data: {confirm: "Really cancel the order?"}, class: 'delete-button' %>
    <% end %>
    </div>
<% end %>
</div>
