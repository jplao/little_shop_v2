<h2> <%= @user.name %></h2>
<% if current_admin? %>
  <%= button_to "Upgrade User", user_path(@user, toggle: "user"), method: :patch, class: "upgrade-button" %> 
<% end %>
<section class='user'>
  <div class="user-data">
    <h2>User info:</h2>
    <strong>Street Address: </strong><%= @user.street_address %><br>
    <strong>City: </strong><%= @user.city %><br>
    <strong>State: </strong><%= @user.state %><br>
    <strong>Zip: </strong><%= @user.zip %><br>
    <strong>Email: </strong><%= @user.email %><br>
    <% if current_admin? %>
      <%= link_to "Edit Profile", edit_user_path(@user) %><br><br>
    <% else %>
      <%= link_to "Edit Profile", profile_edit_path %><br><br>
    <% end %>
  </div>

  <div class="user-stats">
    <h2>Statistics</h2>
  </div>
</section>
<br>

<div class="user_orders">
  <% if @user.orders.length > 0 %>
  <h2>My Orders</h2>
    <% if current_admin? %>
      <%= link_to "My Orders", user_orders_path(@user) %><br><br>
    <% else %>
      <%= link_to "My Orders", profile_orders_path(@user) %><br><br>
      <% end %>
    <% end %>

  <% if @user.role == "admin" %>
    <%= link_to "All Orders", orders_path %>
  <% end %>
</div>
