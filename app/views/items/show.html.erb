<img src=<%= @item.image %>>
<h2><%= @item.name %></h2>
<ul>
  <li><strong>Description: </strong><%= @item.description %></li>
  <li><strong>Merchant Name: </strong><%= @item.user.name %></li>
  <li><strong>In Stock: </strong><%= @item.inventory_count %></li>
  <li><strong>Price: $</strong><%= @item.price %></li>
</ul>
<%= button_to "Add to Cart", cart_path(item_id: @item.id), class: "button" %>
