<% @items.each do |item, quantity| %>
  <div id="item-<%= item.id %>"  >
    <%= item.name %>
    <%= item.user.name %>
    <img src=<%= item.image %> >
    <%= number_to_currency(item.price) %>
    Quantity: <%= quantity %>
    Subtotal: <%= number_to_currency(item.price * quantity) %>
  </div>
<% end %>

<% total = 0 %>
<% @items.each do |item, quantity| %>
<% total += (item.price * quantity) %>
<% end %>
Total: <%= number_to_currency(total) %>

<button type="button">Empty Cart</button>
